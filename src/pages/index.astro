---
import MainLayout from "../layout/main-layout.astro";
import "../styles/index.css";
import Nav from "../components/Nav.astro";
import Header from '../components/Header.astro';
import {ProjectsData} from "../data/projects";
import { Icon } from "astro-icon/components";
---

<MainLayout title="Tonie" description="Tonie - Software Developer">
  <Nav />
	<Header />
  <main>
    <section class="intro_section">
      <p>
        Lorem ipsum dolor sit amet consectetu r <a href="">Hi  adipisicing elit.</a>
        Dignissimos vitae ducimus, iure maxime ea mollitia tenetur incidunt quam
        illum suscipit, laudantium rem assumenda dolor minus esse!
      </p>
    </section>

    <section id="projects">
      <h2 class="section__title">Projects</h2>
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Officiis
        aliquam ipsa tempore sed non!
      </p>

      <div class="project_container">
				{ProjectsData.map((project) => (
					<div class="project" >
						<div class="project_img">
							<img src={project.image} alt={project.imagealt} loading="lazy" />
						</div>
						<h3>{project.title}</h3>
						<p>{project.overview}</p>
						<div class="project_links">
							{project.githublink && <a href={project.githublink} target="_blank" class="project_link"><Icon name="mdi:github"/></a>}
							{project.websitelink && <a href={project.websitelink} target="_blank" class="project_link"><Icon name="mdi:ios-share"/></a>}
						</div>
					</div>
				))}


	  </div>

    </section>
  </main>
</MainLayout>
